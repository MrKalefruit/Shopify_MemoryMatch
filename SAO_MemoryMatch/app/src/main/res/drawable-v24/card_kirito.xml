<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle"
            android:padding="10dp">
            <gradient
                android:angle="45"
                android:startColor="#060417"
                android:endColor="#060417"
                />

            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />

            <stroke
                android:color="@android:color/white"
                android:width="10dp"
                />

            <corners
                android:radius="5dp"
                />
        </shape>

    </item>

    <item android:drawable="@drawable/kirito" />


</layer-list>