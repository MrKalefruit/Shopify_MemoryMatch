<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" android:padding="2dp">
            <gradient
                android:angle="45"
                android:startColor="#ba060c"
                android:endColor="#ba060c"
                />


            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                />

            <stroke
                android:color="@android:color/white"
                android:width="10dp"
                />

            <corners
                android:radius="5dp"
                />
        </shape>
    </item>

    <item android:drawable="@drawable/klain" />
</layer-list>